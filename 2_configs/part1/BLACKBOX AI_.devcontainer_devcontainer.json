// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
    "name": "Python 3",
    "image": "mcr.microsoft.com/devcontainers/python:1-3.12-bullseye",
    "features": {
        // Core Python features
        "ghcr.io/devcontainers/features/python:1": {},
        "ghcr.io/rocker-org/devcontainer-features/miniforge:2": {},
        
        // Code style and formatting
        "ghcr.io/hspaans/devcontainer-features/pycqa:1": {},
        "ghcr.io/hspaans/devcontainer-features/pyupgrade:1": {},
        "ghcr.io/devcontainers-extra/features/black:2": {},
        "ghcr.io/devcontainers-extra/features/isort:2": {},
        "ghcr.io/devcontainers-extra/features/yapf:2": {},
        "ghcr.io/devcontainers-extra/features/ruff:1": {},
        
        // Testing and quality
        "ghcr.io/devcontainers-extra/features/coverage-py:2": {},
        "ghcr.io/devcontainers-extra/features/flake8:2": {},
        "ghcr.io/devcontainers-extra/features/mypy:2": {},
        "ghcr.io/devcontainers-extra/features/vulture:2": {},
        "ghcr.io/devcontainers-extra/features/bandit:2": {},
        "ghcr.io/devcontainers-extra/features/pylint:2": {},
        
        // Package management and tools
        "ghcr.io/schlich/devcontainer-features/rye:1": {},
        "ghcr.io/paul-gilber/devcontainer-features/jinja2-cli-homebrew:1": {},
        "ghcr.io/va-h/devcontainers-features/uv:1": {},
        "ghcr.io/devcontainers-extra/features/pdm:2": {},
        "ghcr.io/devcontainers-extra/features/poetry:2": {},
        "ghcr.io/devcontainers-extra/features/nox:2": {},
        "ghcr.io/devcontainers-extra/features/hatch:2": {},
        "ghcr.io/devcontainers-extra/features/flit:2": {},
        "ghcr.io/devcontainers-extra/features/twine:2": {},
        
        // Development tools
        "ghcr.io/roul/devcontainer-features/mise-python:1": {},
        "ghcr.io/natescherer/devcontainers-custom-features/hypermodern-python:1": {},
        "ghcr.io/devcontainers-extra/features/invoke:1": {},
        "ghcr.io/devcontainers-extra/features/yamllint:2": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "Blackboxapp.blackbox"
            ]
        }
    }

    // Use 'forwardPorts' to make a list of ports inside the container available locally.
    // "forwardPorts": [],

    // Use 'postCreateCommand' to run commands after the container is created.
    // "postCreateCommand": "pip3 install --user -r requirements.txt",

    // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
    // "remoteUser": "root"
}
